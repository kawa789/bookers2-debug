<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%#= render 'users/info', user: @user  %>
      <table class='table'>
       <tr><%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
       <tr>
	       <th>name</th>
	       <th><%= @book.user.name %></th>
       </tr>
       <tr>
	       <th>introduction</th>
	       <th><%= @book.user.introduction %></th>
       </tr>
      </table>

      <div class='row'>
        <%= link_to '',edit_user_path(@book.user),class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
  		    <%= render 'index', book: @book %>

  		    <td>
  		      コメント数:<%= @book.book_comments.count %>
  		    </td>

           <% if @book.user == current_user %>
          <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
          <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <% end %>
        </tr>
      </table>

      <table class='table'>
        <% @book.book_comments.each do |book_comment| %>
        <tr>
         <td>
          <p><%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></p>
          <%= link_to book_comment.user.name, user_path(book_comment.user) %>
         </td>
         <td><%= book_comment.comment %></td>

         <% if book_comment.user == current_user %>
         <td>
           <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger destroy_book_#{@book.id}" %>
         </td>
         <% end %>
        </tr>
        <% end %>
      </table>

      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
         <%= f.text_area :comment, rows:'5', class: "form-control" %>
         <%= f.submit "送信" %>
        <% end %>
      </div>

    </div>
  </div>
</div>